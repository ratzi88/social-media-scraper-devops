pipeline{
    agent any
    stages{
        stage("Clonning app"){
            steps{
                echo "========clone========"

                // dir("${env.BUILD_NUMBER}") {
                //     git branch: 'main', credentialsId: '49bd9cd6-738c-4792-a6aa-fc25cffb434c', url: 'https://github.com/ratzi88/social-media-scraper-devops'
                // }

            }
            post{
                always{
                    echo "========always========"
                }
                // success{
                //     dir("${env.BUILD_NUMBER}") {
                //         sh "git rm -rf jenkinsfile"
                //         sh "git rm -rf README.md"
                //         // sh "git rm -rf .git"
                //     }
                // }
                failure{
                    echo "========A execution failed========"
                }
            }
        }
        stage("apt update upgrade"){
            steps{
                sh "sudo apt update && sudo apt upgrade -y"
                }
        }
        stage("Verifications"){
            parallel{
                stage("terraform installing"){
                    steps{
                        sh "sudo apt install -y wget unzip"
                        sh "wget https://releases.hashicorp.com/terraform/1.6.0/terraform_1.6.0_linux_amd64.zip"
                        sh "unzip terraform_1.6.0_linux_amd64.zip"
                        sh "sudo mv terraform /usr/local/bin/"
                        sh "terraform --version"

                    }
                }
                stage("curl installing"){
                    steps{
                        sh "sudo apt install curl -y"
                    }
                }                        
            }
        }
    }
}