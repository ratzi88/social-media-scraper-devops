pipeline{
    agent any
    stages{
        stage("Clonning app"){
            steps{
                echo "========app clone========"
                echo "${env.BUILD_ID}"
                echo "${env.BUILD_NUMBER}"

                dir("${env.BUILD_NUMBER}") {
                    git branch: 'main', credentialsId: 'b4a3c35c-aa99-4abe-8aea-9d83f979cb76', url: 'https://github.com/ratzi88/social-media-scraper-devops'
                }
            }
            post{
                always{
                    echo "========always========"
                }
                success{
                    // dir("${env.BUILD_NUMBER}") {
                        sh "git rm -rf jenkinsfile"
                        sh "rm -rf ${env.BUILD_NUMBER}"
                        sh "rm -rf 45"
                        sh "rm -rf 47/Terraform"
                        sh "rm -rf 48"
                        sh "rm -rf 50"
                        sh "rm -rf Terraform"
                        sh "rm -rf jenkinsfile"
                        sh "rm -rf README.md"

                        // sh "git rm -rf README.md"
                        // sh "git rm -rf .git"
                    // }
                }
                failure{
                    echo "========A execution failed========"
                }
            }
        }
        stage("A"){
            steps{
                echo "====++++executing A++++===="
            }
            post{
                always{
                    echo "====++++always++++===="
                }
                success{
                    echo "====++++A executed successfully++++===="
                }
                failure{
                    echo "====++++A execution failed++++===="
                }
        
            }
        }
    }
    post{
        always{
            echo "========always========"
        }
        success{
            echo "========pipeline executed successfully ========"
        }
        failure{
            echo "========pipeline execution failed========"
        }
    }
}