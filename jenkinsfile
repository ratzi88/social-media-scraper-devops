pipeline{
    agent any
    stages{
        stage("Clonning app"){
            steps{
                echo "========app clone========"
                echo "${env.BUILD_ID}"
                echo "${env.BUILD_NUMBER}"

                dir("${env.BUILD_NUMBER}") {
                    git branch: 'main', credentialsId: 'b4a3c35c-aa99-4abe-8aea-9d83f979cb76', url: 'https://github.com/ratzi88/social-media-scraper-devops'
                }
            }
            post{
                always{
                    echo "========always========"
                }
                success{
                    dir("${env.BUILD_NUMBER}") {
                        sh "git rm -rf jenkinsfile"
                        sh "git rm -rf README.md"
                        // sh "git rm -rf .git"
                    }
                }
                failure{
                    echo "========A execution failed========"
                }
            }
        }
        stage("Verifications"){
            steps{
                sh "sudo apt update && sudo apt upgrade -y"
                }
        }
        parallel{
                stage("python installing"){
                    steps{
                        echo "11111"
                    }
                }
                stage("Other installing"){
                    steps{
                        echo "11111"
                    }
                }                        

        }
    }
    post{
        always{
            echo "========always========"
        }
        success{
            echo "========pipeline executed successfully ========"
        }
        failure{
            echo "========pipeline execution failed========"
        }
    }
}